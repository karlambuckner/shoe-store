<h1><%= @store.store_name %></h1>

<h2>Edit or delete your store:</h3>

<form action="/stores/<%= @store.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
    <label for="new_store">New Store Name</label>
    <input class="form-control" type="text" name="new_store"/>
<br>
  <button type="submit" class="btn">Update</button>
</form>

<br>

<form action="/stores/<%= @store.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn">Delete</button>
</form>

<br>

<form action="/brand/add/<%= @store.id %>" method="post">
  <label for="brand_names">Select a brand to add to store.</label>
  <select id="brand_names" name="brand_id" type="text">
    <% @brands.each do |brand| %>
      <option value="<%= brand.id %>"><%= brand.brand_name %></option>
    <% end %>
  </select>
  <button type="submit" name="button" class="btn">Add Brand</button>
</form>

<h4>Brands sold at <%= @store.store_name %>:</h4>
<% if @store_brands.any? %>
  <ul>
    <% @store_brands.each do |brand| %>
        <li><%= brand.brand_name %></li>
    <% end %>
  </ul>
  <% else %>
    <p>There are no brands yet.</p>
  <% end %>

<p><a href="/">Home</a></p>
