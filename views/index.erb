<h1>Shoe Tracker</h1>

<h3>View Stores</h3>

<% if @stores.any? %>
  <h4>Here are your stores:</h4>

  <ul>
    <% @stores.each do |store| %>
      <li><a href="/stores/<%= store.id()%>"><%= store.store_name %></a></li>
    <% end %>
  </ul>

<% else %>
  <h4>No stores added yet!</p>

<% end %>

<h2>Add a new store:</h2>
<form action="/" method="post">
  <input type="text" name="store_name">
  <button type="submit">Add Store</button>
</form>
