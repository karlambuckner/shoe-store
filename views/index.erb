<h1>Shoe Tracker</h1>

<h3>All Stores:</h3>
  <% if @stores.any? %>
    <% @stores.each do |store| %>
      <h4><a href="/stores/<%= store.id %>" style="color: darkgoldenrod"><%= store.store_name %></a></h4>
  <% end %>
<% else %>
  <p>There are no stores yet.</p>
<% end %>


<h3>All Brands:</h3>
  <% if @brands.any? %>
    <% @brands.each do |brand| %>
      <h4><a href="/brands/<%= brand.id %>" style="color: darkgoldenrod"><%= brand.brand_name %></a></h4>
      <p>Price: $<%= brand.price %>0</p>
  <% end %>
<% else %>
  <p>There are no brands yet.</p>
<% end %>

<br>

<h4>Add a new store:</h4>

  <form action="/store" method="post" class="form-group">
    <label for="store_name">Store Name:</label>
    <input id="store_name" type="text" name="store_name" class="form-control">
  <br>
    <button type="submit" class="btn">Add Store</button>
  </form>


<h4>Add a new brand:</h4>

  <form action="/brand" method ="post" class="form-group">
    <label for="brand_name">Brand:</label>
    <input id="brand_name" type="text" name="brand_name" class="form-control">
  <br>
    <label for="price">Brand Price:</label>
    <input id="price" type="integer" name="price" class="form-control">
  <br>
    <button type="submit" class="btn">Add</button>
  </form>
