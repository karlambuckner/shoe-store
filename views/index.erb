<h1>Shoe Tracker</h1>

<h3>All Stores</h3>
  <ul>
    <% @stores.each do |store| %>
      <li><a href="/stores/<%= store.id()%>"><%= store.store_name %></a></li>
    <% end %>
  </ul>


<h3>All Brands</h3>
  <ul>
    <% @brands.each do |brand| %>
      <li><a href="/brands/<%= brand.id()%>"><%= brand.brand_name %></a></li>
    <% end %>
  </ul>

<br>

<h4>Add a new store:</h4>
<div class="form-group">
  <form action="/store/new" method="post">
    <input type="text" name="store_name">
    <button type="submit">Add Store</button>
  </form>
</div>


<h4>Add a new brand:</h4>
<div class="form-group">
  <form action="/brand/new" method="post">
    <input type="text" name="brand_name">
    <button type="submit">Add Brand</button>
  </form>
</div>
